{
  "JwtSettings": {
    "Secret": "your-super-secret-key-that-is-at-least-32-characters-long-for-production",
    "Issuer": "SafeVault",
    "Audience": "SafeVaultUsers",
    "ExpirationMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:443",
        "Certificate": {
          "Path": "/certs/site.pfx",
          "Password": "yourStrongPassword"
        }
      },
      "Http": {
        "Url": "http://0.0.0.0:80"
      }
    },
    "RedirectToHttps": {
      "Enabled": true,
      "Port": 443
    }
  },
  "AllowedHosts": "*"
}

